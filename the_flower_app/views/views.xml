<odoo>
    <data>
        <record id="view_my_awesome_model_form" model="ir.ui.view">
            <field name="name">flower.flower.form</field>
            <field name="model">flower.flower</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <h4><em><field name="scientific_name"/></em></h4>
                        <group>
                            <group>
                                <field name="watering_frequency"/>
                                <field name="watering_amount_ml"/>
                            </group>
                            <group>
                                <field name="season_start"/>
                                <field name="season_end"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_my_awesome_model_tree" model="ir.ui.view">
            <field name="name">flower.flower.search</field>
            <field name="model">flower.flower</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="scientific_name"/>
                </tree>
            </field>
        </record>

        <record id="view_my_awesome_model_kanban" model="ir.ui.view">
            <field name="name">flower.flower.kanban</field>
            <field name="model">flower.flower</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="scientific_name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top mb-0">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <em><field name="scientific_name"/></em>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_my_awesome_model_search" model="ir.ui.view">
            <field name="name">flower.flower.tree</field>
            <field name="model">flower.flower</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="scientific_name"/>
                </search>
            </field>
        </record>

        <record id="action_view_my_awesome_model" model="ir.actions.act_window">
            <field name="name">Flowers</field>
            <field name="res_model">flower.flower</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="view_my_awesome_model_kanban"/>
        </record>

        <menuitem id="flowers_app_root" name="Flowers" action="action_view_my_awesome_model"/>
    </data>
</odoo>
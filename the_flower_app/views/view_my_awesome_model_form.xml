<odoo>
    <data>
        <record id="view_my_awesome_model_form" model="ir.ui.view">
            <field name="model">product.product</field>
            <field name="mode">primary</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <header position="inside">
                    <button string="Plants" type="object"
                            name="action_open_product_lot"
                            attrs="{'invisible': [('tracking', '=', 'none')]}"
                            class="oe_stat_button" icon="fa-pagelines"/>
                </header>

                <div name="button_box" position="replace"/>

                <h1 position="after">
                    <h4><em><field name="scientific_name" placeholder="Scientific Name"/></em></h4>
                </h1>

                <xpath expr="//notebook/*" position="before">
                    <page string="Flower">
                        <group>
                            <group>
                                <field name="watering_frequency"/>
                                <field name="watering_amount_ml"/>
                            </group>
                            <group>
                                <field name="season_start"/>
                                <field name="season_end"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_order_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id), ('is_flower', '=', True)]</attribute>
                </xpath>
            </field>
        </record>
<!--        domain="[('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"-->

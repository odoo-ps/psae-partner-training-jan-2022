        <!--                <tree>-->
        <!--                    <field name="name"/>-->
        <!--                    <field name="scientific_name"/>-->
        <!--                </tree>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="action_view_my_awesome_model" model="ir.actions.act_window">
            <field name="name">Flowers</field>
            <field name="res_model">product.product</field>
            <field name="view_ids" eval="[(5,0,0),
                   (0, 0, {'view_mode': 'tree', 'view_id': ref('product.product_product_tree_view')}),
                   (0, 0, {'view_mode': 'form', 'view_id': ref('the_flower_app.view_my_awesome_model_form')})]"/>
            <field name="domain">[('is_flower', '=', True)]</field>
            <field name="context">{'default_is_flower': True}</field>
        </record>

        <menuitem id="flowers_app_root" name="Flowers" action="action_view_my_awesome_model"/>
    </data>
</odoo>